    <div class="container">
        <div class="main-body">
        
              <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex flex-column align-items-center text-center">
                        <img src=<%= picUrl %>  alt="Admin" class="rounded-circle" width="150">
                        <div class="mt-3">
                          <h2> <%= fname %>   </h2>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card mt-3">
                    <ul class="list-group list-group-flush">

                      <button class="btn btn-outline-primary"><a class="userProfile" href="">View Profile</a></button>
                        <br>      
                      <button class="btn btn-outline-primary"><a class="userProfile" href=""> Edit Profile </a></button>
                        <br>
                      <button class="btn btn-outline-primary"><a class="userProfile" href="">My Bookings</a> </button>
                        <br>
                      
                    </ul>
                  </div>
                </div>

                <div class="col-md-8">
                  <div class="card mb-3" >
                    <div class="card-body">
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Full Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <%= fname %>  
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <%= email %> 
                        </div>
                      </div>
                      <hr>

                      <h3> Vehicle Details </h3>
                      <hr>

                      <% for(var i=0; i<vehicleList.length ; i++) { %>
                        <div class="row">
                          <div class="col-sm-3">
                            <h6 class="mb-0">Vehicle Type</h6>
                          </div>
                          <div class="col-sm-9 text-secondary">
                            <%= vehicleList[i].vehicleType %> 
                          </div>
                        </div>
                        <hr>

                        <div class="row">
                          <div class="col-sm-3">
                            <h6 class="mb-0">Vehicle Number</h6>
                          </div>
                          <div class="col-sm-9 text-secondary">
                            <%= vehicleList[i].vehicleNumber %> 
                          </div>
                        </div>
                        <hr>
                      <% } %> 
                      <a class="btn btn-dark" href="/addVehicle" role="button">Add Vehicle</a>
                    </div>
                  </div>
                  
                    
                </div>
              </div>
            </div>
          </div>
        </div>


